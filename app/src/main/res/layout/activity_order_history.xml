<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_div"
    android:background="@drawable/empty"
    tools:context=".Activities.Orderhistory">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_order_historyrec"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        app:layout_constraintEnd_toEndOf="@+id/main_div"
        app:layout_constraintStart_toStartOf="@+id/main_div"
        app:layout_constraintTop_toTopOf="@+id/main_div"
        tools:listitem="@layout/orderhistoryitems">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/addressdel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="15dp"
        android:text=""
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/main_div"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/main_div"
        app:layout_constraintTop_toBottomOf="@+id/my_order_historyrec" />

</androidx.constraintlayout.widget.ConstraintLayout>